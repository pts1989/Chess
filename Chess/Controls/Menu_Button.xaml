	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Chess.Menu_Button"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480" Width="300" Height="60">

	<Grid x:Name="LayoutRoot" Background="#FF778ABA">
